   <% time_now = Date.today %>
<h4>Current Events</h4>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Date</th>
      <th>Location</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
         
        <tr>
            <td><%= event %></td>
            <td><%= event.title %></td>
            <td><%= event.date %></td>
            <td><%= event.location %></td>
            <td><%= event.body %></td>
                <td><%= link_to 'Show All', event %></td>
                <td></td>
        </tr>
        
    <% end %>
  </tbody>
</table>

<h4>Past Events</h4>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Date</th>
      <th>Location</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
         
        <tr>
            <td><%= event.inspect %></td>
            <td><%= event.title %></td>
            <td><%= event.date %></td>
            <td><%= event.location %></td>
            <td><%= event.body %></td>
                <td><%= link_to 'Show All', event %></td>
        </tr>

    <% end %>
  </tbody>
</table>
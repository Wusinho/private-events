
<h4>Current Events</h4>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Date</th>
      <th>Location</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @upcoming.each do |event| %>
        
      <tr>
        <td><%= event.creator.username %> </td>
        <td>
        <%= link_to event.title, event_path(event) %>
        
        </td>

        <td><%= event.date %></td>
        <td><%= event.location %></td>
        <td><%= event.body %></td>
        <td>  
        
        </td>
    
        
      </tr>
    <% end %>
   
  </tbody>
</table>


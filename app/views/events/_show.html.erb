
<h4>Current Events</h4>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Date</th>
      <th>Location</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @upcoming.each do |event| %>
        
      <tr>
        <td><%= event.creator.username %> </td>
        <td><%= event.title %></td>
        <td><%= event.date %></td>
        <td><%= event.location %></td>
        <td><%= event.body %></td>
       
    
        
      </tr>
    <% end %>
      <%= simple_form_for(@attendance) do |f| %>
            <%= hidden_field_tag :event_id, @event.id %>
            <%=hidden_field_tag :user_id, Current.user.id, {id: 'user_user_id', name: 'user[user_id]'}%>
            <%= f.button :submit, class: "button is-danger" %>
          <% end %>
  </tbody>
</table>

